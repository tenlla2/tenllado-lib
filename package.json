{
  "name": "tenllado-lib",
  "private": false,
  "version": "0.1.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix 'src/**/*.{jsx,ts,tsx}'",
    "format": "prettier --write src//**/*.{ts,tsx,scss} --config ./.prettierrc",
    "preview": "vite preview",
    "prepare": "husky",
    "test": "vitest"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "react-hooks": "^1.0.1",
    "sass": "^1.71.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.3.1"
  },
  "main": "dist/tenllado-lib.umd.js",
  "module": "dist/tenllado-lib.es.js",
  "types": "dist/tenllado-lib.d.ts",
  "exports": {
    ".": {
      "import": "./dist/tenllado-lib.es.js",
      "require": "./dist/tenllado-lib.umd.js",
      "types": "./dist/tenllado-lib.d.ts",
      "default": "./dist/tenllado-lib.es.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tenlla2/tenllado-lib"
  },
  "keywords": [],
  "author": "Antonio Tenllado",
  "bugs": {
    "url": "https://github.com/tenlla2/tenllado-lib/issues"
  },
  "homepage": "https://github.com/tenlla2/tenllado-lib#readme",
  "license": "MIT"
}
